extends /pug/layout/layout
include /modules/card/card
include /modules/checkbox/checkbox
include /modules/rich-checkbox/rich-checkbox
include /modules/expandable-checkbox-list/expandable-checkbox-list
include /modules/pagination/pagination
block content
	.search
		.search__filters 
			.search__dates 
				h3.search__dates-label даты пребывания в отеле
				.search__dates-datepicker
			.search__guests 
			.search__price-slider 
			.search__rules 
				h3.search__list-title правила дома
				ul.search__list 
					li.search__list-item
						+checkbox("Можно курить")
					li.search__list-item
						+checkbox("Можно с питомцами")
					li.search__list-item
						+checkbox("Можно пригласить гостей (до 10 человек)")
			.search__access 
				h3.search__list-title доступность
				ul.search__list 
					li.search__list-item
						+rich-checkbox("Широкий коридор", "Ширина коридоров в номере не менее 91 см.")
					li.search__list-item
						+rich-checkbox("Помощник для инвалидов", "На 1 этаже вас встретит специалист  и проводит до номера.")
			.search__comfort 
				h3.search__comfort-label удобства номера
				.search__comfort-dropdown
			.search__extra 
				+expandable-checkbox-list("дополнительные удобства", "Завтрак", "Письменный стол", "Стул для кормления", "Кроватка", "Телевизор", "Шампунь")

		.search__results 
			h1.search__title Номера, которые мы для вас подобрали
			.search__rooms 
				- let i = 12
				while i > 0
					+card 
					- i--
			.search__pagination  
				+pagination